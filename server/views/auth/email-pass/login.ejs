<%- include('_head') %>

<body class="text-center">

  <% if (step == 2){ %>
      <form action="/auth/email-pass/" method="post" id="login-form" class="form-signin" >
          <img class="mb-4" src="./img/logo.png" alt="" width="auto" height="120">
          <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>    
          <div>
              <label for="username" class="sr-only">Email</label>
              <input id="username" type="email"  class="form-control" name="username" readonly value="<%= email %>" />
          </div>
          <input type="hidden" name="salt" id="salt" value="<%=salt%>" />
          <div style="margin-top: 10px;">
              <label for="password" class="sr-only">Password</label>
              <input id="password" type="password" class="form-control" name="password" placeholder="Password" />
          </div>
          <div style="margin-top: 20px;">
              <button type="submit" class="btn btn-lg btn-primary btn-block">Log In</button>
          </div>
      </form>
  <% } else { %>
      <form action="/auth/email-pass/" method="get" class="form-signin" >
          <img class="mb-4" src="./img/logo.png" alt="" width="auto" height="120">
          <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>
          <% if (failed){ %>
              <p style="color: red;">Username/Password incorrect</p>
          <% } %>     
          <div>
              <label for="email" class="sr-only">Email</label>
              <input id="email" type="email"  class="form-control" name="email" placeholder="JSmith@example.com"/>
          </div>
          <div style="margin-top: 20px;">
              <button type="submit" class="btn btn-lg btn-primary btn-block"><i class="fas fa-arrow-circle-right"></i></button>
          </div>
          <div style="margin-top: 20px;">
              <p>Or</p>
              <a href="/auth/email-pass/register">Register a new account</a>
          </div>
      </form>
      
  <% } %>
  
  </body>