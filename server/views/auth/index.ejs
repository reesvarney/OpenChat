<head>
  <meta name="description" content="Free and open-source communication">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="apple-touch-icon" sizes="180x180" href="./apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="./favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="./favicon-16x16.png">
  <link rel="mask-icon" href="./safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">
  <link rel="shortcut icon" href="./favicon.ico">
  <title>OpenChat Login</title>

  <meta property="og:title" content="OpenChat" />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" itemprop="name" content="OpenChat" />
  <meta property="og:description" itemprop="description" content="Open Source Communication" />

  <script src="./js/forge.min.js"></script>
  <script src="./js/jquery.js"></script>

  <link rel="stylesheet" type="text/css" href="./css/all.min.css" />
  <link rel="stylesheet" type="text/css" href="./css/uikit.min.css">
</head>

<body style="background-color: #414449;">
    <div style="position: fixed; width: 100%; height: 100%; background-image: url('./img/logo-white-bg.png'); background-repeat: space; background-size: 200px; opacity: 0.02;"></div>
    <div class="uk-card uk-card-body uk-card-default uk-width-auto uk-position-center uk-text-center" style>
      <div class="uk-card-media-top" style="height: 100px;">
        <img src="./img/logo.png" style="height: 100%" alt="">
      </div>
      <h3 class="uk-card-title">Welcome</h3>
      <p>
        Please select a method to login
      </p>
      <div class="uk-text-left">
        <% authMethods.forEach(method => { %>
          <a href="/auth/<%= method.path %>" class="uk-button uk-button-default uk-text-left" style="width: 100%; height: auto; margin-bottom: 20px; padding: 10px;">
                <span style="margin: 0px;" class="uk-card-heading uk-text-large uk-text-light " >
                  <i class="fas fa-<%= method.icon %>" style="margin-right: 15px;"></i>
                  <%=method.name%>
                </span>
          </a>
          <br>
        <% }); %>
        </div>
      
      <div style="text-align: center;box-sizing: content-box;">
        <small id="passInfo" class="form-text text-muted">Alternatively, <a href="https://github.com/reesvarney/OpenChat/releases">download the client</a>.</small>
      </div>
    </div>
</body>
