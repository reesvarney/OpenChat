<!DOCTYPE html>
<html lang="en">
<%- include('_head', {req}) %>

<body>
  <div id="overlay">
    <%- include('_admin_windows', {req, roles, config}) %>
    <%- include('_user_settings', {req}) %>
  </div>

  <nav>
    <div class="brand">
      <img class="brand-image" src="./img/logo.svg">
      <div id="server_title">
        <h1><%= config.name %></h1>
        <% if(req.user.permissions.global.edit_server || req.user.permissions.global.edit_roles){ %>
          <a href="#" class="edit_server_btn">
            <i class="fas fa-cog"></i>
          </a>
        <% } %>
      </div>
    </div>
    <a id="nav-close"><i class="fas fa-times"></i></a>
    <div id="channels_heading">
      <h4>Channels</h4>
      <% if(req.user.permissions.global.edit_channels){ %>
        <a href="#" class="add_channel_btn">
          <i class="far fa-plus-square"></i>
        </a>
      <% } %>
    </div>
    <div id="channels">
    </div>
    <div id="control_area" class="uk-card uk-card-default">
      <a id="mute_microphone"><i class="fas fa-microphone fa-lg"></i></a>
      <a id="mute_audio"><i class="fas fa-volume-up fa-lg"></i></a>
      <a id="disconnect_button" style="display: none;"><i class="fas fa-phone-slash fa-lg"></i></a>
      <a id="logout_button" href="/auth/logout" style="color: black;" title="Sign Out"><i class="fas fa-sign-out-alt fa-lg"></i></a>
      <a id="user_settings_button"><i class="fas fa-user-cog" title="User Settings"></i></a>
    </div>

  </nav>

  <main>
    <div id="channel-content">
    
    <!-- MOVE THIS INTO SEPARATE MESSAGE CONTROLLER -->
    <!-- START -->
    <div id="channel_info">
      <div id="nav-toggle">
        <a  style="font-size: 2em;"><i class="fas fa-bars"></i></a>
      </div>
      <div>
        <p class="current_channel_name"  class="uk-heading-small uk-text-lighter"></p>
        <p class="current_channel_desc"></p>
      </div>
    </div>
    <div style="display: flex; flex-direction: column; flex-grow: 1; overflow-y: auto;" id="message_scroll">
      <div id="load_messages" style="width: 100%; text-align: center; margin-top: auto; display: none;">
        <a href="#">Load More</a>
      </div>

      <div style="min-height: 100%;">
        <ol id="messages">
        
        </ol>
      </div>
    </div>

    <div id="new_message" class="notification bottom hidden">
      <div class="content">
        <div>
        <span>New Message</span>
      </div>
      <div>
        <a style="cursor: pointer;" id="new_msg_btn">View</a>
        <a style="cursor: pointer; size: 5px; margin-left: 10px;" id="new_msg_close"><i class="fas fa-times"></i></a>
      </div>
      </div>
    </div>

    
    <% if(req.user.permissions.global.send_message){ %>
      <form id="message_input_area">
          <textarea rows="2" id="message_box" class="uk-textarea" placeholder="Send a message"></textarea>
      </form>
      <% } else {%>
      <div id="message_input_area">
        <p style="color: grey">You do not have permission to send messages.</p>
      </div>
    <%} %>
    <!-- END -->
    </div>

    <div id="global_user_list">
      <h3 class="uk-heading-divider">Users</h3>
      <h5 class="uk-heading-line"><span>Permanent</span></h5>
      <ul class="perm-users uk-list">
        
      </ul>

      <!-- Add a check for the config.allowanon for whether to display this - also maybe hide if no temp users connected -->
      <h5 class="uk-heading-line"><span>Temporary</span></h5>

      <ul class="temp-users uk-list">
        
      </ul>
    </div>

  </main>
</body>

  <div class="interact-menu">

  </div>
</html>