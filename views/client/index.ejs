<!DOCTYPE html>
<html lang="en">
<%- include('_head') %>

<body>
  <div class="overlay active" id="connect_overlay">
    <div class="modal" id="connect_modal">
      <h2 class="center-self">Enter a display name</h2>
      <form class="login-form" id="connect_form">
        <input type="text" id="name_input">
        <button>Connect</button>
      </form>
    </div>
  </div>

  <nav>
    <div class="brand">
      <img id="oc_image" src="./img/logo.svg">
      <h1 id="server_title"><%= conf.server.name %></h1>
    </div>
    <a id="nav-close"><i class="fas fa-times"></i></a>
    <div id="channels">
      <h2>Channels</h2>
      <% Object.keys(conf.server.channels).forEach(function(type){%>
        <div class="channel-group">
          <h3><%= type %></h3>
          <ul id="<%= type %>_channels">
            <% conf.server.channels[type].forEach(function(e){%>
              <%- include('_channel', {data: e, channel_type: type}); %>
            <% }); %>
          </ul>
        </div>
      <% }); %>
    </div>

    <div id="control_area">
      <a id="mute_microphone" class="control-button"><i class="fas fa-microphone fa-lg"></i></a>
      <a id="mute_audio" class="control-button"><i class="fas fa-volume-up fa-lg"></i></a>
      <a id="disconnect_button" class="control-button" style="display: none;"><i
          class="fas fa-phone-slash fa-lg"></i></a>
    </div>

    <table>
      <tr>
        <td>
          <label for="call_volume">Call Volume</label>
        </td>
        <td>
          <input type="range" min="0" max="10" class="slider" value="10" id="call_volume">
        </td>
      </tr>
      <tr>
        <td>
          <label for="player_volume">Misc Audio Volume</label>
        </td>
        <td>
          <input type="range" min="0" max="10" class="slider" value="10" id="player_volume">
        </td>
      </tr>
    </table>

  </nav>

  <main>
    <div id="channel_info">
      <a id="nav-toggle" style="font-size: 2em;"><i class="fas fa-bars"></i></a>
      <h2 id="channel_name"></h2>
      <p id="channel_description"></p>
    </div>
    <div style="display: flex; flex-direction: column; flex-grow: 1; overflow-y: scroll; position: relative;" id="channel_content">
      <div id="load_messages" style="width: 100%; text-align: center; margin-top: auto; display: none;">
        <a href="#">Load More</a>
      </div>

      <div id="message_scroll" style="min-height: 100%;">
        <ol id="messages">
        
        </ol>
      </div>
      <div id="extension_content">

      </div>
    </div>
    <div id="new_message" class="notification bottom hidden">
      <a>New Message</a>
      <div style="display: inline;">
        <a style="cursor: pointer;" id="new_msg_btn">View</a>
        <a style="cursor: pointer; size: 5px; margin-left: 10px;" id="new_msg_close"><i class="fas fa-times"></i></a>
      </div>
    </div>
    <form id="message_input_area" style="display: none">
      <textarea rows="1" id="message_box"></textarea>
      <button id="message_send">Send</button>
    </form>
  </main>
</body>

<audio id="call_out" autoplay></audio>
<audio id="player" autoplay></audio>
</html>