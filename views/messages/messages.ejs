<% for(i = 0; i < data.length; i++){ 
var message = data[i];
%>
    <div id="<%= message.id %>" class="message-card">
        <p>
            <strong><%= message.sender %></strong>
            <i><%= message.date %></i>
            <br>
            <%- message.content %>
        </p>
        
        <% if("ogp" in message){ %>
            <% var ogp = message.ogp; %>
            <%- include('_ogp', {ogp: ogp}) %>
        <% } %>
    </div>
<% } %>